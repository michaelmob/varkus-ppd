/* Menus/Navigation */
.main.menu {
	z-index: 1000 !important;
	height: 2.5rem;
	line-height: 2.5rem;
}

.main.menu > .logo.header {
	font-size: 1.5rem;
	padding: 0.5rem 1rem;
	background-color: transparent !important;
}

.main.menu > .logo.header:hover {
	background-color: @primaryColor !important;
	_text-shadow: 0 0 0.3rem #000;
}

.main.menu > .item,
.main.menu > .menu > .item {
	margin-top: -1px;
	min-height: 2.5rem;
}

.main.menu > .menu > .wide.item {
	min-width: 6rem;
	text-align: center;
}

.menu.push {
	height: 4rem;
}

.side.menu {
	top: auto !important;
	overflow-y: auto;
	height: 100%;
}

/* Footer */
.footer .icon {
	font-size: 1.5rem;
	color: #666;
}

.footer a {
	font-size: 1rem;
}

.footer a:hover, .footer .icon:hover {
	color: #999 !important;
	text-decoration: none;
}

/* Links */
a, i, .logo.header {
	-webkit-transition: color 0.2s ease, background-color 0.2s ease, text-shadow 0.2s ease;
	-moz-transition: color 0.2s ease, background-color 0.2s ease, text-shadow 0.2s ease;
	transition: color 0.2s ease, background-color 0.2s ease, text-shadow 0.2s ease;
}

/* Margin */
.message.margin {
	margin: 0.45rem 0.4rem 0 0.4rem;
}

.no.margin {
	margin: 0 !important;
	padding: 0 !important;
}

/* Typography */
.large.text {
	font-size: 4.5rem;
	line-height: 4rem;
}

.green.text {
	color: #1CB842;
}

.orange.text {
	color: #e07b53;
}

/* Semantic-UI Overrides */
.ui.grid {
	position: relative;
}

.sortable.table > thead > tr > th > a {
	display: block;
	color: inherit;
}

i.icon {
	font-size: inherit !important;
}

i.circular.icon, .ui.segment {
	background-color: #FEFEFE;
}

.ui.list .list > a.item:hover, .ui.list > a.item:hover {
	color: #1CB842;
}
.ui.comments {
	max-width: 100% !important;
}
.ui.inverted.menu {
	background-color: #222;
}

.column > .box > .title,
.ui.inverted.side.menu .active.item,
.ui.button.toggle.active {
	background-color: @primaryColor !important;
}

.ui.inverted.side.menu .active.item:hover,
.ui.button.toggle.active:hover {
	background-color: @primaryColorHover !important;
}

.ui.inverted.side.menu .active.item:active,
.ui.button.toggle.active:active {
	background-color: @primaryColorActive !important;
}
