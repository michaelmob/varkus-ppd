# Non-SSL Server (Redirect to SSL)
server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name viking.com www.viking.com;
	return 301 https://$server_name$request_uri;
}

# SSL Server
server {
	listen 80 default_server;
	listen [::]:80 default_server;
	listen 443 ssl http2 default_server;
	listen [::]:443 ssl http2 default_server;

	# SSL
	#ssl_certificate /etc/letsencrypt/live/viking.com/fullchain.pem;
	#ssl_certificate_key /etc/letsencrypt/live/viking.com/privkey.pem;
	#ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
	#ssl_prefer_server_ciphers on;
	#ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
	#ssl_ecdh_curve secp384r1;
	#ssl_session_cache shared:SSL:10m;
	#ssl_session_tickets off;
	#ssl_stapling on;
	#ssl_stapling_verify on;
	#resolver 8.8.8.8 8.8.4.4 valid=300s;
	#resolver_timeout 5s;
	#add_header Strict-Transport-Security "max-age=63072000; includeSubdomains; preload";
	#add_header X-Frame-Options DENY;
	#add_header X-Content-Type-Options nosniff;
	#ssl_dhparam /etc/ssl/certs/dhparam.pem;

	root /var/www/viking/project/;
	index index.html;

	server_name viking.com www.viking.com insecure.viking.com;
	client_max_body_size 500m;

	# Robots.txt
	location /robots.txt {
		root /var/www/viking/static/;
	}

	# LetsEncrypt
	#location ~ /.well-known {
	#	root /var/www/viking/;
	#	allow all;
	#}

	# Static Files
	location /static/ {
		root /var/www/viking/;
		autoindex off;
	}

	# Media Files
	location /media/ {
		root /var/www/viking/;
		autoindex off;
	}

	# Protected Media Files
	location /media/files/ {
		root /var/www/viking/;
		internal;
	}

	# Websocket Reverse Proxy
	location /ws/ {
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header X-Real-IP $remote_addr;
		proxy_pass http://127.0.0.1:8000;
	}

	# Django Reverse Proxy
	location / {
		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;
		proxy_redirect off;
		proxy_connect_timeout 60;
		proxy_read_timeout 60;
		proxy_pass http://127.0.0.1:8000;
	}
}
