server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/viking/project/;

	index index.html;

	server_name _;
	client_max_body_size 100m;

	location /static/ {
		alias /var/www/viking/project/static/;
		autoindex off;
	}

	location /media/ {
		alias /var/www/viking/project/media/;
		autoindex off;
	}

	location /media/files/ {
		alias /var/www/viking/project/media/files/;
		internal;
	}

	location / {
		proxy_pass_header Server;
		proxy_set_header Host $http_host;
		proxy_redirect off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Scheme $scheme;
		proxy_connect_timeout 10;
		proxy_read_timeout 10;
		proxy_pass http://localhost:8000/;
	}

	error_page 500 502 503 504 /var/www/viking/project/templates/errors/500.html;
}
